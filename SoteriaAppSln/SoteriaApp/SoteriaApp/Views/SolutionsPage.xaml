<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SoteriaApp.Views.SolutionsPage">

    <Frame BackgroundColor="Transparent" Margin="0,0,0,5">
        <StackLayout BackgroundColor="Transparent"
                         VerticalOptions="Center"
                         Padding="0,40,0,0"
                         Spacing="15"
                         Margin="15"
                         HorizontalOptions="Center">


            <!-- Colour Zones of Regulation -->

            <Frame CornerRadius="10"
                   BackgroundColor="Transparent"
                             Margin="0"
                             Padding="0,1,0,0"
                             HasShadow="False"
                             HeightRequest="90"
                            WidthRequest="320"
                               >
                <Button Text="Colour Zones of Regulation"
                       TextColor="White"
                       BackgroundColor="#5ED7F2"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                        Command="{Binding ColourZonesBtnCommand}"
                       />
            </Frame>
            <!-- Coping with Disorders -->
            <Frame CornerRadius="10"
                   BackgroundColor="Transparent"
                             Margin="0"
                             Padding="0,1,0,0"
                             HasShadow="False"
                              HeightRequest="90"
                            WidthRequest="320"
                               >
                <Button Text="Coping with Disorders"
                       TextColor="White"
                       BackgroundColor="#5ED7F2"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                        Command="{Binding CopingWithBtnCommand}"
                       />
            </Frame>
            <!-- Questions to ask children to open up -->
            <Frame CornerRadius="10"
                   BackgroundColor="Transparent"
                             Margin="0"
                             Padding="0,1,0,0"
                             HasShadow="False"
                             HeightRequest="90"
                             WidthRequest="320"
                            
                             >

                <Button Text=" Questions to ask children to open up"
                       
                       TextColor="White"
                       BackgroundColor="#5ED7F2"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                        Command="{Binding QuestionsBtnCommand}"
                       />
            </Frame>
        </StackLayout>
    </Frame>
</ContentPage>