<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SoteriaApp.Views.InfluencesPage">
    <StackLayout>

        <Label Text=" INFLUENCES" HorizontalTextAlignment="Center" FontFamily="FredokaOne-Regular.ttf" TextColor="#5C6898" Margin="0,50,0,-50" FontSize="45"> 
            
        </Label>
        <Frame BackgroundColor="Transparent">
            <StackLayout BackgroundColor="Transparent"
                         VerticalOptions="Center"
                         Padding="0,100,0,0"
                         Spacing="15"
                         Margin="20"
                         HorizontalOptions="Center">
                <!--PTSD-->
                <Frame BackgroundColor="Transparent">

                    <Button x:Name="PtsdBtn" Text="PTSD"
                               CornerRadius="10"
                             Margin="-5"
                             Padding="0,1,0,0"
                             HeightRequest="60"
                             WidthRequest="350" 
                            TextColor="White"
                       BackgroundColor="#5C6898"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                          Command="{Binding PtsdType3BtnCommand}"
                            
                       />
                </Frame>

                <!--Anxiety-->
                <Frame BackgroundColor="Transparent">

                    <Button x:Name="AnxBtn" Text="Anxiety"
                            CornerRadius="10"
                             Margin="-5"
                             Padding="0,1,0,0"
                             HeightRequest="60"
                             WidthRequest="350" 
                            TextColor="White"
                       BackgroundColor="#FDB3CA"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                         
                           Command="{Binding AnxietyType2BtnCommand}"
                       />
                </Frame>

                <!--Depression-->
                <Frame BackgroundColor="Transparent">

                    <Button x:Name="DepBtn" Text="Depression"
                            CornerRadius="10"
                             Margin="-5"
                             Padding="0,1,0,0"
                             HeightRequest="60"
                             WidthRequest="350" 
                            TextColor="White"
                       BackgroundColor="#5C6898"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                            Command="{Binding DepPage2Btn}"
                           
                       />
                </Frame>

                <!--Disruptive Behaviour Disorder-->
                <Frame BackgroundColor="Transparent">
                    <Button x:Name="SupportGroupsButton" Text="Disruptive Behaviour Disorder"
                            CornerRadius="10"
                             Margin="-5"
                             Padding="0,1,0,0"
                             HeightRequest="60"
                             WidthRequest="350" 
                            TextColor="White"
                       BackgroundColor="#FDB3CA"
                       FontFamily="Roboto-Regular.ttf"
                       FontSize="Medium"
                            Command="{Binding DbdPage2Btn }"
                            
                           
                       />
                </Frame>


            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>