<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SoteriaApp.Views.SettingPage" >

    <Frame BackgroundColor="Transparent" Margin="0,50,0,0" >


        <StackLayout BackgroundColor="Transparent"
                     Spacing="10"
               
               VerticalOptions="Center"
               HorizontalOptions="Fill">

            <Frame BackgroundColor="Transparent" 
                   BorderColor="#5C6898"
                   CornerRadius="50"
                   HasShadow="True"
                   >

                <Label Text="Account" 
                       TextColor="#5C6898"
                       HorizontalTextAlignment="Center"
                       FontFamily="OpenSans-Regular.ttf"
                       FontSize="Medium"
                       />


            </Frame>

            <Frame BackgroundColor="Transparent" 
                   BorderColor="#5C6898"
                   CornerRadius="50"
                   HasShadow="True"
                   >

                <Label Text="Support" 
                       TextColor="#5C6898"
                       HorizontalTextAlignment="Center"
                       FontFamily="OpenSans-Regular.ttf"
                       FontSize="Medium"/>

            </Frame>

            <Frame BackgroundColor="Transparent" 
                   BorderColor="#5C6898"
                   CornerRadius="50"
                   HasShadow="True"
                   >

                <Label Text=" Privacy and Policy " 
                       TextColor="#5C6898"
                       HorizontalTextAlignment="Center"
                       FontFamily="OpenSans-Regular.ttf"
                       FontSize="Medium"/>

            </Frame>

            <Frame BackgroundColor="Transparent" 
                   BorderColor="#5C6898"
                   CornerRadius="50"
                   HasShadow="True"
                   >

                <Label Text="About Us" 
                       TextColor="#5C6898"
                       HorizontalTextAlignment="Center"
                       FontFamily="OpenSans-Regular.ttf"
                       FontSize="Medium"/>

            </Frame>

            <Grid Margin="0,25,0,0" BackgroundColor="Transparent"
                  HorizontalOptions="StartAndExpand" 
                  >
                   <CheckBox IsChecked="{Binding AlwaysShowTutorial}"
                          VerticalOptions="StartAndExpand"
                          Color="#5C6898"
                            />
                
                   <Label Text="Rewatch tutorial when starting up?"
                       TextColor="#5C6898"
                       VerticalOptions="Center"
                       HorizontalOptions="Center" >
                    
                   </Label>

            </Grid>
            
            <Frame
                
  
                BackgroundColor="#5C6898" 
                   Margin="0,25,0,40"
                   CornerRadius="10"
                   HasShadow="False">

                <Label Text="Sign Out" 
                       
                       TextColor="white"
                       HorizontalTextAlignment="Center"
                       FontFamily="OpenSans-Regular.ttf"
                       FontSize="Medium"
                       />
                
            </Frame>

            <Label Text=" Delete Account " 
                   FontFamily="OpenSans-Regular.ttf"
                   TextColor="#5C6898"
                       HorizontalOptions="CenterAndExpand"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center">


            </Label>


            

            



        </StackLayout>
        
    </Frame>

</ContentPage>