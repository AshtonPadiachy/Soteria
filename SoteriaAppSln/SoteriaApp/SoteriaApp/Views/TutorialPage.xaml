<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
              xmlns:views="clr-namespace:SoteriaApp.Views"
             x:Class="SoteriaApp.Views.TutorialPage">
    <StackLayout>

        <CarouselView>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="20" Background="white" VerticalOptions="CenterAndExpand">
                        <Frame BackgroundColor="AliceBlue" Padding="12" CornerRadius="0">
                            <Label Text="{Binding Title}" />
                        </Frame>
                        <Frame BackgroundColor="AliceBlue" Padding="12" CornerRadius="0">
                            <Label Text="{Binding Content}" />
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type views:CarouselItem}">
                    <views:CarouselItem Title="Introduction" Content="Aware is a Mental HealthApp that focuses on the mental wellbeing of children in the early childhood development phase" />
                    <views:CarouselItem Title="Insight" Content="Discover more on Mental Health in early childhood development" />
                    <views:CarouselItem Title="Report" Content="Stay informed onyour child's daily performance and behaviors." />
                    <views:CarouselItem Title="Zones of Regulation" Content=" Blue, green,yellow, and red are the 4 colours  of alertness and emotion that assists educators to identify the feelings and level of alertness in children." />

                </x:Array>
            </CarouselView.ItemsSource>
        </CarouselView>


    </StackLayout>



</ContentPage>