                                           TextColor="#5C6898" FontSize="16" 
                                           FontFamily="Montserrat-SemiBold.ttf"/>

        <Label Text="Not interactive in class" HorizontalTextAlignment="Center"  Padding="60,0,60,20"
                                           TextColor="#5C6898" FontSize="16" 
                                           FontFamily="Montserrat-SemiBold.ttf"/>

        <Label Text="Plays alone" HorizontalTextAlignment="Center"  Padding="60,0,60,20"
                                           TextColor="#5C6898" FontSize="16" 
                                           FontFamily="Montserrat-SemiBold.ttf"/>

        <Label Text="Not friendly" HorizontalTextAlignment="Center"  Padding="60,0,60,20"
                                           TextColor="#5C6898" FontSize="16" 
                                           FontFamily="Montserrat-SemiBold.ttf"/>

        <Label Text="Less attentive" HorizontalTextAlignment="Center"  Padding="60,0,60,20"
                                           TextColor="#5C6898" FontSize="16" 
                                           FontFamily="Montserrat-SemiBold.ttf"/>


