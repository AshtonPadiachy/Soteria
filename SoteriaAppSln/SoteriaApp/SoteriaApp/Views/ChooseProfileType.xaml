<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SoteriaApp.Views.ChooseProfileType">
    <Frame BackgroundColor="Transparent">
        
        <StackLayout BackgroundColor="Transparent">


            <Frame BackgroundColor="Transparent" Margin="0,10,1,0" >

                <Label Text="Which role"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"
                   TextColor="#5C6898"
                       FontFamily="Roboto-Bold.ttf"
                       CharacterSpacing="0.1">

                </Label>

            </Frame>

            <Frame BackgroundColor="Transparent" Margin="0,-42,0,0">

                <Label Text=" describes you ?"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"
                   TextColor="#5C6898"
                   FontFamily="Roboto-Bold.ttf"
                       CharacterSpacing="0.1">

                </Label>

            </Frame>

           
            <Grid BackgroundColor="Transparent">

                <Frame BackgroundColor="Transparent" >

                    <ImageButton x:Name="Educator"  Source="Educator"
                                 HeightRequest="80"
                                 WidthRequest="80"
                                 CornerRadius="360"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="StartAndExpand"
                                 BackgroundColor="#A9DFE2"
                                 Padding="-6,-6,-6,-6"
                                 Margin="-19,120,0,0"
                                 Command="{Binding EducatorCommand}">

                        

                    </ImageButton>
                    
                </Frame>

                <Label Text=" Educator "
                       Margin="5,290,0,0"
                       FontFamily="Roboto-Regular.ttf"
                       HorizontalOptions="StartAndExpand"
                       FontSize="Subtitle"
                       TextColor="#5C6898"
                       >
                    
                    
                </Label>

                <ImageButton x:Name="Parents" Source="Family" 
                                 HeightRequest="80"
                                 WidthRequest="80"
                                 CornerRadius="360"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="Center"         
                                 BackgroundColor="#D1D5FA"
                                 Padding="-6,-6,-6,0"
                                 Margin="-21,120,-25,0"
                                 Command="{Binding ParentCommand}">

                </ImageButton>

                <Label Text=" Parent / " 
                       Margin="-10,290,-18.5,0"
                       FontFamily="Roboto-Regular.ttf"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="Subtitle"
                       TextColor="#5C6898"
                       >


                </Label>

                <Label Text=" Gaurdian"
                       TextColor="#5C6898"
                       Margin="-20,305,-28.5,0"
                       FontFamily="Roboto-Regular.ttf"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="Subtitle"
                       Padding="0,10,10,0">
                    
                    
                </Label>

                <ImageButton x:Name="Guest" Source="Guest"
                                 HeightRequest="80"
                                 WidthRequest="80"
                                 CornerRadius="360"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="End"         
                                 BackgroundColor="#FDB3CA"
                                 Padding="-6,-6,0,-6"
                                 Margin="0,120,2,0"
                                 Command="{Binding GuestCommand}">
                    
                </ImageButton>

                <Label Text=" Guest " 
                       Margin="0,290,-267,0"
                       FontFamily="Roboto-Regular.ttf"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="Subtitle"
                       TextColor="#5C6898"
                       >


                </Label>





            </Grid>








        </StackLayout>

    </Frame>

</ContentPage>